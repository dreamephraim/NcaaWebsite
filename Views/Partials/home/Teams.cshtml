 @{
	 var cont = Umbraco.Content("6745ced5-73ea-47df-a975-7899d7941722");
	 var selection = cont
		 .ChildrenForAllCultures.DescendantsOrSelfOfType("team")
		 .Where(x => x.IsVisible());
		 }
 
 <section id="ft-team" class="ft-team-section position-relative">
		<div class="container">
			<div class="ft-team-content">
				<div class="row">
					<div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="00ms" data-wow-duration="1500ms">
						<div class="ft-team-text-area mt-3">
							<div class="ft-section-title headline pera-content">
								<span class="sub-title">Our Team</span>
								<h2>Management Team
								</h2>
								<p>@Model.Value("mission", fallback: Fallback.ToAncestors) </p>
							</div>
							<div class="ft-btn">
								<a class="d-flex justify-content-center align-items-center" href="@cont.Url()">Explore Team</a>
							</div>
						</div>
					</div>
					@foreach (var item in selection.Take(3))
					{

						var fullName = item.Value("fullName");
						var twitter = item.Value("twitter");
						var facebook = item.Value("facebook");
						var designation = item.Value("designation");
						// var summary = item.Value("quotes");
						var image = item.GetCropUrl("profilePhoto", "homeThumbnail");
						var img = item.Value("profilePhoto");
						// var pDate = Model.CreateDate;
						<div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="200ms"
						     data-wow-duration="1500ms">
							<a href="@item.Url()">
							<div class="ft-team-inner-itembox position-relative">
								<span class="hover-shape position-absolute">
									<img src="images/shape/tm-sh.png" alt="">
								</span>
								<div class="ft-team-inner-item-img">
									<img src="@img" alt="@fullName image">
								</div>
								<div class="ft-team-inner-item-text headline">
									<h3><a href="@item.Url()">@fullName</a></h3>
									<span>@designation</span>
								</div>
							</div></a>
						</div>
										
						
					}
					</div>
			</div>
		</div>
	</section>
